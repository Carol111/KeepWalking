<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colormain"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    tools:context="com.example.univasf.keepwalking.MainActivity">

        <!-- Texto Keep Walking -->
        <TextView
            android:id="@+id/textKeepWalking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Walking"
            android:textSize="35sp"
            android:textStyle="italic"
            android:layout_alignBottom="@+id/menuPopup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"/>

        <!-- Texto Caminhada -->
        <TextView
            android:id="@+id/textCaminhada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caminhada"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_below="@+id/textKeepWalking"
            android:layout_centerHorizontal="true" />

        <!-- Menu Popup -->
        <Button
            android:id="@+id/menuPopup"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="310dp"
            android:background="@drawable/menu"
            android:onClick="showPopup"/>

        <!-- Passos -->
        <FrameLayout
            android:id="@+id/fLPassos"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/circle"></FrameLayout>

        <!-- Tempo -->
        <FrameLayout
            android:id="@+id/fLTempo"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/circle"></FrameLayout>

        <!-- Distancia -->
        <FrameLayout
            android:id="@+id/fLDistancia"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/circle"></FrameLayout>

        <!-- Velocidade -->
        <FrameLayout
            android:id="@+id/fLVelocidade"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/circle"></FrameLayout>

        <!-- Kcal -->
        <FrameLayout
            android:id="@+id/fLKcal"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="340dp"
            android:background="@drawable/circle"></FrameLayout>

        <!-- Botao Inciar -->
        <Button
            android:id="@+id/btIniciar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="Iniciar"
            android:textColor="#FF525252"/>

        <!-- Botao Zerar -->
        <Button
            android:id="@+id/btZerar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="480dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="Zerar"
            android:textColor="#FF525252"/>

</RelativeLayout>